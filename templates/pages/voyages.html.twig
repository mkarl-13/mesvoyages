{% extends "basefront.html.twig" %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left" scope="col">
                    Ville
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"ville", ordre:"ASC"}) }}" role="button"><</a>
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"ville", ordre:"DESC"}) }}" role="button">></a>
                </th>
                <th class="text-left" scope="col">
                    Pays
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"pays", ordre:"ASC"}) }}" role="button"><</a>
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"pays", ordre:"DESC"}) }}" role="button">></a>
                </th>
                <th class="text-end" scope="col">
                    Note
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"note", ordre:"ASC"}) }}" role="button"><</a>
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"note", ordre:"DESC"}) }}" role="button">></a>
                </th>
                <th class="text-center" scope="col">
                    Date
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"datecreation", ordre:"ASC"}) }}" role="button"><</a>
                    <a class="btn btn-primary" href="{{ path("voyages.sort", {champ:"datecreation", ordre:"DESC"}) }}" role="button">></a>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
            <tr>
                <td>
                    <a href='#'>{{ visite.ville }}</a>
                </td>
                <td>
                    {{ visite.pays }}
                </td>
                <td class='text-end'>
                    {% if visite.note<10 %}
                        <div class="text-danger">
                            {{ visite.note }}/20
                        </div>
                    {% else %}
                        <div class="text-success">
                            {{ visite.note }}/20
                        </div>
                    {% endif %}
                </td>
                <td class="text-center">
                    {{ visite.datecreationstring }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}